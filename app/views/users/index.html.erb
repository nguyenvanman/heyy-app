<% provide(:title, 'Admin page') %>
<% if logged_in? %>
    <div>
        <h1>Users list</h1>
        <table class='table table-striped table-bordered'>
            <thead>
                <tr>
                    <th scope='col'>UID</th>
                    <th></th>
                    <th scope='col'>Name</th>
                    <th scope='col'>Email</th>
                    <th scope='col'></th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <th scope='row'><%= user.uid %></td>
                    <td align='center'>
                        <% if (!user.image_url.nil?) %>
                            <%= image_tag(user.image_url, size: '40x40') %>
                        <% end %>
                    </td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to 'View', user %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>