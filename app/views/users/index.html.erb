<% provide(:title, 'Admin page') %>
<% if logged_in? %>
    <div>
        <h1>Users list</h1>
        <table class='table table-striped table-bordered'>
            <thead>
                <tr>
                    <th scope='col' width='8%'>User ID</th>
                    <th scope='col' width='10%'>Facebook ID</th>
                    <th width='10%'></th>
                    <th scope='col' width='25%'>Name</th>
                    <th scope='col' width='25%'>Email</th>
                    <th scope='col' width='10%'>Sign In Count</th>
                    <th scope='col' width='12%'></th>
                </tr>
            </thead>
            <tbody>
                <%= render @users %>
            </tbody>
        </table>
    </div>
<% end %>