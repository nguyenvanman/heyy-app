<tr>
    <th scope='row'><%= user.id %></th>
    <td scope='row'><%= user.uid %></td>
    <td align='center'>
        <% if (!user.image_url.nil?) %>
            <img class="img-avatar" src="<%= user.image_url %>">
        <% end %>
    </td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'See preferences', user %></td>
</tr>